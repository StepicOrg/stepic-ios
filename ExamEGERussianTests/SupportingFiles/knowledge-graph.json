    "topics": [
        {
            "id": "a-numeral-systems",
            "title": "Системы счисления",
            "description": "Изучение систем счисления и двоичного представления информации в памяти компьютера",
            "required-for": [
                "data-encoding-decoding"
            ]
        },
        {
            "id": "data-encoding-decoding",
            "title": "Кодирование и декодирование данных",
            "description": "Умение кодировать и декодировать информацию, определять скорость передачи информации и объем памяти необходимый для хранения звуковой и графической информации",
            "required-for": [
                "work-with-information"
            ]
        },
        {
            "id": "work-with-information",
            "title": "Методы работы с информацией",
            "description": "Знания о методах измерения количества информации и подсчёте информационного объёма сообщения"
        },
        {
            "id": "logic",
            "title": "Логика",
            "description": "Основные понятия и законы математической логики, таблицы истинности и логические схемы, логические выражения",
            "required-for": [
                "information-retrieval-storage-technologies"
            ]
        },
        {
            "id": "modeling-computer-experiment",
            "title": "Моделирование и компьютерный эксперимент",
            "description": "Анализ информационных моделей и поиск путей в графе"
        },
        {
            "id": "information-retrieval-storage-technologies",
            "title": "Технологии поиска и хранения информации",
            "description": "Технологии хранения, поиска и сортировки информации в базах данных, поиск информации в сети Интернет"
        },
        {
            "id": "process-numerical-information",
            "title": "Обработка числовой информации",
            "description": "Технологии обработки информации в электронных таблицах и методов визуализации данных с помощью диаграмм и графиков"
        },
        {
            "id": "architecture-computers-computer-networks",
            "title": "Архитектура компьютеров и компьютерных сетей",
            "description": "Базовые принципы организации и функционирования компьютерных сетей, адресации в сети"
        },
        {
            "id": "elements-theory-algorithms",
            "title": "Элементы теории алгоритмов",
            "description": "Формальное исполнение алгоритма, записанного на естественном языке, анализ результата исполнения алгоритма",
            "required-for": [
                "programming"
            ]
        },
        {
            "id": "programming",
            "title": "Программирование",
            "description": "Изучение основных конструкций языка программирования, понятия переменной, оператора присваивания, работа с массивами, рекурсия"
        }
    ],
